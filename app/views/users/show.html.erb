<div class='user_card'>
  <%= image_tag @user.photo%>
  <h1><%= @user.name%></h1>
  <small>No of Posts:<%= @user.posts_counter%></small>
</div>
<p>Bio <br/><%= @user.bio%></p>
<% @user.three_recent_posts_per_user.each do |post| %>
  <div class= 'post_card'>
    <h3><%=link_to post.title, "/users/#{@user.id}/posts/#{post.id}"%></h3>
    <p><%= post.text%></p>
    <small>Comments:<%= post.comments_counter%></small>
    <small>Likes:<%= post.likes_counter%></small>
  </div>
<% end %>
<% if @user.three_recent_posts_per_user.size.zero? %>
  <p>No posts yet!</p>
<% else %>
  <%=link_to 'All posts', "/users/#{@user.id}/posts"%>
<% end %>